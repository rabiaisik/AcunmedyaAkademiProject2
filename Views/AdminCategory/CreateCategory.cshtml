@model AcunmedyaAkademi2.Entities.Category


@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Yeni Kategori Ekle</strong>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Kategori Adı</label>
                            <input type="text" name="CategoryName" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Kategori Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>

