@model AcunmedyaAkademi2.Entities.Category


@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Kategori Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(x => x.CategoryId)
                            <label>Ürün Adı</label>
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = " form-control" })
                            <br />
                            <button class="btn btn-primary">Kategoriyi Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>

