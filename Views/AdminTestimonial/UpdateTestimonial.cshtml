@model AcunmedyaAkademi2.Entities.testimonial


@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Referans Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(x => x.TestimonialId)
                            <label>Referans Adı Soyadı</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = " form-control" })
                            <br />
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.CommentDetail, new { @class = " form-control" })
                            <br />
                            <label>Fotoğraf Adresi</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = " form-control" })
                            <br />
                            <button class="btn btn-primary">Referansı Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>

