@model AcunmedyaAkademi2.Entities.testimonial


@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Yeni Referans Ekle</strong>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Referans Adı Soyadı</label>
                            <input type="text" name="NameSurname" class="form-control" />
                            <br />
                            <label>Açıklaması</label>
                            <input type="text" name="CommentDetail" class="form-control" />
                            <br />
                            <label>Fotoğraf Adresi</label>
                            <input type="text" name="ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Referans Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>


