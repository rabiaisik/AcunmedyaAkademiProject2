@model List<AcunmedyaAkademi2.Entities.testimonial>

@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Referanslar Listesi</strong>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Referans Adı Soyadı</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Fotoğraf</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.TestimonialId</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.CommentDetail</td>
                                        <td>
                                            <img src="@item.ImageUrl" alt="Referans Fotoğrafı" width="70" height="70" />
                                        </td>
                                        <td><a href="/AdminTestimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/AdminTestimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>


                            </tbody>
                        </table>
                        <td><a href="/AdminTestimonial/CreateTestimonial" class="btn btn-primary">Yeni Referans Girişi</a></td>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>


