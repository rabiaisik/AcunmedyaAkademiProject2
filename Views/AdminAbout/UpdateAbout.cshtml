@model AcunmedyaAkademi2.Entities.About


@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Hakkımda Yazısı Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(x => x.AboutId)
                            <label>Hakkımda</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = " form-control" })
                            <br />
                            <button class="btn btn-primary">Hakkımdayı Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>


